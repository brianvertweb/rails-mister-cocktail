
  <div class="banner" style= "background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://blog.zanui.com.au/wp-content/uploads/2016/08/Cocktail-movie-1988-starring-Tom-Cruise-from-claratsi.wordpress.com_-1050x700.jpg');">
    <div class="banner-content">
      <h1>Cocktails & Dreams</h1>
      <h4><span id="banner-typed-text"></span></h4>
      <%= link_to "Create A Drink", new_cocktail_path(@cocktails), class:"btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 hvr-float-shadow">

          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <div class="card-description">
            <h4><%= link_to cocktail.name, cocktail_path(cocktail) %></h4>
            </div>
          </div>

      </div>
      <% end %>
    </div>
</div>

