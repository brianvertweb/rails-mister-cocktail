


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/605408/pexels-photo-605408.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <div class="banner-content">

  <h3><strong>- Add A New Cocktail - </strong></h3>

<%= simple_form_for [@cocktail] do |f| %>

  <%= f.input :name, placeholder: "e.g. Mojito",
  label: "Enter a drink..." %>
  <%= f.input :photo, label: "Add your photo..." %>
  <% f.input :photo_cache, as: :hidden %>

<%= f.submit "Send Tom Your Drink!", class: "btn btn-primary" %>
<% end %>


  </div>
</div>
